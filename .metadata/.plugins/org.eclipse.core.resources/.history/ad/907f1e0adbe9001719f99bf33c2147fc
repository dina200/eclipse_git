package sea_fight;

import java.util.ArrayList;
import java.util.Scanner;

public class Game {

	public static void main(String[] args) {

		DotCom dot1 = new DotCom();
		DotCom dot2 = new DotCom();
		DotCom dot3 = new DotCom();
		
		dot1.setName("Pets.com");
		dot2.setName("Go2.com");
		dot3.setName("AskMe.com");
		int numOfGuesses = 0;
		
		
		
		GameHelper helper = new GameHelper();
		
		int randLocation = (int) (Math.random() * 5);
		
		ArrayList<String> location = new ArrayList<String> ();
		
		for (int i = 0; i < 3; i++) {
			location.add(((Integer)(randLocation + i)).toString());
		}	
		
		dot1.setLocationCells(location);
		
		boolean isAlive = true;	
		
		while(isAlive == true) {
			
			String choice = helper.getUserInput("Введите значение: ");
			
			String result = dot1.checkYourself(choice);
			numOfGuesses++;
			
			if (result.equals("Потопил")) {
				isAlive = false;
				System.out.println("Количество попыток: " + numOfGuesses);
			}
		}
	}
}
