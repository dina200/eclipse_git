package chap2;

public class Shuffle1 {

	public static void main(String[] args) {
		int x = 3;
		while(x > 0){
		
			if (x > 2){
				System.out.print("a");				
			} else if (x == 2){
				System.out.print("b c");				
			} else if (x == 1){
				System.out.print("d");
				x = x-1;
			} 
			if (x > 0){
			x = x-1;
			System.out.print("-");	
			}
		}		
	}
}
