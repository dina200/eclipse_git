package game;

public class GuessGame {
	private Player p1 = new Player();
	private Player p2 = new Player();
	private Player p3 = new Player();
	
	
		
	public void startGame(){
		int guess1 = 0;
		int guess2 = 0;
		int guess3 = 0;
		
		boolean p1isRight = false;
		boolean p2isRight = false;
		boolean p3isRight = false;
		
		int targetNumber = (int) (Math.random()*10);
		System.out.print("Я загадываю число от 1 до 9... ");
		
		while(true){
			this.p1.guess();
			this.p2.guess();
			this.p3.guess();
			
			guess1 = this.p1.number;
			System.out.println("Первый игрок думает, что это " + guess1);
			guess2 = this.p2.number;
			System.out.println("Первый игрок думает, что это " + guess2);
			guess3 = this.p3.number;
			System.out.println("Первый игрок думает, что это " + guess3);
			
			if (guess1 == targetNumber){
				p1isRight = true;
			}
			if (guess2 == targetNumber){
				p2isRight = true;
			}
			if (guess3 == targetNumber){
				p3isRight = true;
			}
			
			if (p1isRight || p2isRight || p3isRight){
				System.out.println("У нас есть победитель!");
				System.out.println("Первый игрок угадал? - " + p1isRight);	
				System.out.println("Второй игрок угадал? - " + p2isRight);
				System.out.println("Третий игрок угадал? - " + p3isRight);
				System.out.println("Game over.");
			break;
			} else {
				System.out.println("Игроки должны попробовать еще раз...");					
			}
		}
	}	
}
